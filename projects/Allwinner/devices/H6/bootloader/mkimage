if [ -f "$RELEASE_DIR/3rdparty/bootloader/u-boot.itb" ]; then
  echo "Writing u-boot.itb to $(basename $DISK)"
  dd if="$RELEASE_DIR/3rdparty/bootloader/u-boot.itb" of="$DISK" bs=1K seek=40 conv=fsync,notrunc >"$SAVE_ERROR" 2>&1 || show_error
fi

if [ -f "$RELEASE_DIR/3rdparty/bootloader/sunxi-spl.bin" ]; then
  echo "Writing SPL to $(basename $DISK)"
  dd if="$RELEASE_DIR/3rdparty/bootloader/sunxi-spl.bin" of="$DISK" bs=1K seek=8 conv=fsync,notrunc >"$SAVE_ERROR" 2>&1 || show_error
fi
